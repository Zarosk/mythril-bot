{
  "name": "oads-discord-bot",
  "version": "0.4.0",
  "description": "Discord orchestration bot for OADS - monitors vault and posts status updates",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "notify": "tsx scripts/notify-complete.ts",
    "dev:all": "concurrently -n BOT,BRAIN -c blue,green \"npm run dev\" \"npm --prefix ../oads-brain run dev\""
  },
  "keywords": [
    "discord",
    "bot",
    "oads",
    "orchestration"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@types/archiver": "^7.0.0",
    "archiver": "^7.0.1",
    "chokidar": "^3.6.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.7",
    "gray-matter": "^4.0.3",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  }
}
